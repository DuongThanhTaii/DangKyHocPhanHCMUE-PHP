# Environment for Testing (Docker)
# Copy this to .env.testing when running in Docker test environment

APP_NAME="DKHP Testing"
APP_ENV=testing
APP_KEY=base64:test_key_for_testing_environment_only=
APP_DEBUG=true
APP_URL=http://localhost

# Database - PostgreSQL in Docker
DB_CONNECTION=pgsql
DB_HOST=postgres-test
DB_PORT=5432
DB_DATABASE=dkhp_test
DB_USERNAME=postgres
DB_PASSWORD=postgres_test

# Redis - Docker
REDIS_CLIENT=predis
REDIS_HOST=redis-test
REDIS_PORT=6379
REDIS_PASSWORD=null

# Cache
CACHE_STORE=redis

# Session
SESSION_DRIVER=array

# Queue
QUEUE_CONNECTION=sync

# Mail
MAIL_MAILER=log

# Bcrypt - lower rounds for faster tests
BCRYPT_ROUNDS=4

# JWT
JWT_SECRET=test_jwt_secret_key_for_testing_only
